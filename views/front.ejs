        </div>
      </div>
    
      <!-- Horizontal Line -->
      <hr>
    
      <!-- Latest Sports Section -->
      <div class="section" id="latest-sports">
        <h2>Latest Sports Activities</h2>
        <div class="cards">
          <div class="card">
            <img src="https://as1.ftcdn.net/v2/jpg/02/78/61/80/1000_F_278618036_dXc4EjQlp6vp5at5FixZwzQqGzcN0uyU.jpg" alt="Sport 1">
